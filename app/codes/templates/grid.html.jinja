{%extends "base.html" %}
{# This macros file is made available by FlaskGridify #}
{% import "gridify/macros.html.jinja" as macros %}
	{% block style %} 
	.jsgrid {
		margin-top:4vh;		
		border: 1px solid black !important;
		border-radius: var(--bs-border-radius);
		transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
	} 
	
	.external-pager {
        margin: 10px 0;
    }

	.external-pager .jsgrid-pager-current-page {
            background: #c4e2ff;
            color: #fff;
	}
	.jsgrid-grid-header .jsgrid-grid-body{
		overflow-x: scroll!important;
	}
	
	.jsgrid-pager-container {
		display: block !important;
	}
	
	{% endblock %}
	{% block title %} Коды аэропортов {% endblock %}

    {% block content %}

    <div id="airport-grid"></div>
	<div id="externalPager" class="external-pager"></div>	    
	
	{% endblock %}


    {% block otherscripts %}
    {# This macro is made available to any app using FlaskGridify
        TODO: The GRID_REGISTRY is a global jinja variable added by extension
        trying to remove the explicit need for it to be passed in #}
	{{ macros.create_grid("airport-grid", "airport", GRID_REGISTRY["airport"]) }}
    {% endblock %}

    {% block tail %}
    {% endblock %}